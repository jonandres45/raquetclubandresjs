{{ 'Items.css' | asset_url | stylesheet_tag }}

<div class="container">
        <div class="textGreen m-rigth">
            {{ section.settings.heading_text }}
        </div>
        <div class="m-rigth">
            <h2 class="title">{{ section.settings.subheading_text }}</h2>
            <p class="m-lg-top text-grey">{{ section.settings.description_text }}</p>
        </div>
        <div class="">
            <button class="btnAboutBlack">{{ section.settings.button_text }}</button>
        </div>
    </div>
    <div class="container">
        <div class="container-slider">
            <img src="{{ section.settings.slider_image | img_url: 'original' }}" alt="Slider Image" width="100%" height="100%">
            <div class="text-overlay">
                <h1 class="title">{{ section.settings.slider_heading }} <strong>{{ section.settings.slider_strong_text }}</strong></h1>
                <p class="subtitle">{{ section.settings.slider_description }}</p>
                <div style="display: flex; flex-wrap: wrap;">
                    <div class="small-circle-active"></div>
                    <div class="small-circle"></div>
                    <div class="small-circle"></div>
                    <div class="small-circle"></div>
                </div>
                <div style="display: flex; flex-wrap: wrap;">
                    <button class="btnBefore m-rigth">{{ section.settings.prev_button_text }}</button>
                    <button class="btnNext">{{ section.settings.next_button_text }}</button>
                </div>
            </div>
        </div>
        <div class="container-items">
              <div class="container-img-item">
                  <img src="{{ section.settings.img1 | img_url: 'original' }}" alt="Item Image" width="100%" height="100%">
                  <button class="btnAdd text-overlay">1</button>
              </div>
              <div class="container-img-item">
                  <img src="{{ section.settings.img2 | img_url: 'original' }}" alt="Item Image" width="100%" height="100%">
                  <button class="btnAdd text-overlay">2</button>
              </div>
              <div class="container-img-item">
                  <img src="{{ section.settings.img3 | img_url: 'original' }}" alt="Item Image" width="100%" height="100%">
                  <button class="btnAdd text-overlay">3</button>
              </div>
        </div>
    </div>

{% schema %}
{
  "name": "Items Section",
  "settings": [
    {
      "type": "text",
      "id": "page_title",
      "default": "Items Page",
      "label": "Page Title"
    },
    {
      "type": "text",
      "id": "heading_text",
      "default": "TENNIS",
      "label": "Heading Text"
    },
    {
      "type": "text",
      "id": "subheading_text",
      "default": "Raquetas. Accesorios. Pelotas.",
      "label": "Subheading Text"
    },
    {
      "type": "textarea",
      "id": "description_text",
      "default": "Conoce nuestras pelotras y aprende a jugar tennis como un profesional",
      "label": "Description Text"
    },
    {
      "type": "text",
      "id": "button_text",
      "default": "ACERCA DE NOSOTROS â†’",
      "label": "Button Text"
    },
    {
      "type": "image_picker",
      "id": "slider_image",
      "label": "Slider Image"
    },
    {
      "type": "image_picker",
      "id": "img1",
      "label": "product1"
    },
    {
      "type": "image_picker",
      "id": "img2",
      "label": "product2"
    },
    {
      "type": "image_picker",
      "id": "img3",
      "label": "product3"
    },
    {
      "type": "text",
      "id": "slider_heading",
      "default": "Nuestras",
      "label": "Slider Heading"
    },
    {
      "type": "text",
      "id": "slider_strong_text",
      "default": "raquetas",
      "label": "Slider Strong Text"
    },
    {
      "type": "textarea",
      "id": "slider_description",
      "default": "Conoce nuestras raquetas y aprende a jugar tennis como profesional",
      "label": "Slider Description"
    },
    {
      "type": "text",
      "id": "prev_button_text",
      "default": "<",
      "label": "Previous Button Text"
    },
    {
      "type": "text",
      "id": "next_button_text",
      "default": ">",
      "label": "Next Button Text"
    },
    {
      "type": "text",
      "id": "css_file",
      "default": "main.css",
      "label": "CSS File"
    }
  ],
  "blocks": [
    {
      "type": "image",
      "name": "Item Image",
      "settings": [
        {
          "type": "image_picker",
          "id": "image",
          "label": "Image"
        },
        {
          "type": "text",
          "id": "button_label",
          "default": "1",
          "label": "Button Label"
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "Items",
      "category": "Custom"
    }
  ]
}
{% endschema %}